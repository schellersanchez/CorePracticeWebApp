@model CorePracticeWebApp.ViewModels.MemberManageVm
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage</h2>
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>City</th>
                <th>Details</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var member in Model.Members)
            {
                <tr>
                    <td>@member.FirstName</td>
                    <td>@member.LastName</td>
                    <td>@member.City</td>
                    <td>@Html.ActionLink("Details", "Details", "Member", new {@id=member.Id} ) </td>
                    <td>@Html.ActionLink("Edit", "Edit", "Member", new { @id = member.Id }) </td>
                </tr>
            }

        </tbody>
    </table>
</div>

